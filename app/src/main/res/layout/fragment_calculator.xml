<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/submitButtonContainer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Usia -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USIA"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etUsia"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#E5E5E5"
                android:hint="MASUKKAN USIA ANDA"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Durasi Tidur -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DURASI TIDUR"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etDurasiTidur"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#E5E5E5"
                android:hint="MASUKKAN DURASI TIDUR ANDA"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Aktivitas Fisik -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AKTIVITAS FISIK"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etAktivitasFisik"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#E5E5E5"
                android:hint="BERAPA LAMA ANDA OLAHRAGA"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Tinggi Badan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TINGGI BADAN"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etTinggiBadan"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#E5E5E5"
                android:hint="TINGGI BADAN (CM)"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Berat Badan -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BERAT BADAN"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/etBeratBadan"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#E5E5E5"
                android:hint="BERAT BADAN (KG)"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#666666"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <!-- Jenis Kelamin -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JENIS KELAMIN"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerJenisKelamin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#E5E5E5"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Tingkat Stres -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIKAT STRES"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E5E5E5"
                android:orientation="vertical"
                android:padding="16dp">

                <SeekBar
                    android:id="@+id/seekBarStres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progressTint="@color/blue_primary"
                    android:thumbTint="@color/blue_primary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1"
                        android:textColor="#666666"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvStresValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="10"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Submit Button Container -->
    <LinearLayout
        android:id="@+id/submitButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="24dp">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/blue_primary"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
